<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:focusable="true"
    android:clickable="true"
    >
    <EditText
        android:id="@+id/edtPlaylistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Playlist name"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="18sp"
        android:focusableInTouchMode="false"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imbEdit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/imbEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_edit"
        app:iconTint="@color/controls_colors"
        style="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        app:iconPadding="0dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toEndOf="@id/edtPlaylistName"
        app:layout_constraintEnd_toStartOf="@id/imbDelete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/imbDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:iconTint="@color/controls_colors"
        app:icon="@drawable/ic_delete"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        app:iconPadding="0dp"
        style="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
        app:layout_constraintStart_toEndOf="@id/imbEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>