<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_arrow_back"

        style="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="File information"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toStartOf="@id/btnEdit"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_edit"
        style="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivSongDetail"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@mipmap/ic_launcher"
        app:shapeAppearanceOverlay="@style/imageViewCornerStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>
    <LinearLayout
        android:id="@+id/lnInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/ivSongDetail"
        app:layout_constraintTop_toTopOf="@id/ivSongDetail"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3:25"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvBitrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="44 KHz, 320 kbps, Stereo"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSizeFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12,500 KB"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvFileFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FLAC"
            />
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
        app:layout_constraintTop_toBottomOf="@id/ivSongDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilArtist"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
        app:layout_constraintTop_toBottomOf="@id/tilTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >
       <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Artist" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilAlbum"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
        app:layout_constraintTop_toBottomOf="@id/tilArtist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Album" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilGenre"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
        app:layout_constraintTop_toBottomOf="@id/tilAlbum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Genre" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilYear"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
        app:layout_constraintTop_toBottomOf="@id/tilGenre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year" />

    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>