<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_arrow_back"

        style="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="File information"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toStartOf="@id/btnEdit"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_edit"
        style="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivSongDetail"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@mipmap/ic_launcher"
        app:shapeAppearanceOverlay="@style/imageViewCornerStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>
    <LinearLayout
        android:id="@+id/lnInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/ivSongDetail"
        app:layout_constraintTop_toTopOf="@id/ivSongDetail"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3:25"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvBitrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="44 KHz, 320 kbps, Stereo"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSizeFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12,500 KB"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvFileFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FLAC"
            />
    </LinearLayout>
    <include
        layout="@layout/edit_text_template"
        android:id="@+id/edtTitle"
        android:hint="Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivSongDetail"
        android:layout_marginTop="8dp"
        />
    <include
        layout="@layout/edit_text_template"
        android:id="@+id/edtArtist"
        android:hint="Artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edtTitle"

        />
    <include
        layout="@layout/edit_text_template"
        android:id="@+id/edtAlbum"
        android:hint="Album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edtArtist"

        />
    <include
        layout="@layout/edit_text_template"
        android:id="@+id/edtGenre"
        android:hint="Genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edtAlbum"

        />
    <include
        layout="@layout/edit_text_template"
        android:id="@+id/edtYear"
        android:hint="Year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edtGenre"

        />
</androidx.constraintlayout.widget.ConstraintLayout>