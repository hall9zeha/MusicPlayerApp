<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.activities.AboutThisActivity">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivAppInfo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ktmusic_icon_original"
        android:scaleType="fitXY"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"/>
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="KTMusic"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/ivAppInfo"
        app:layout_constraintTop_toTopOf="@id/ivAppInfo"
        android:layout_marginStart="8dp"/>
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="V 1.0.0"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/ivAppInfo"
        app:layout_constraintTop_toBottomOf="@id/tvAppName"

        android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>