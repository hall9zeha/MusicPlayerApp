<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KTMusicPlayer" parent="Theme.Material3.DynamicColors.Dark">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSurface">@color/surface</item>
        <item name="backgroundColor">@color/surface</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>
    <style name="Base.Theme.KTMusicPlayer.ActionBar" parent="Theme.Material3.DynamicColors.Dark">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSurface">@color/surface</item>
        <item name="backgroundColor">@color/surface</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="Theme.KTMusicPlayer.Material3" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSurface">@color/surface</item>
        <item name="backgroundColor">@color/surface</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="Theme.KTMusicPlayer.ActionBar" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSurface">@color/surface</item>
        <item name="backgroundColor">@color/surface</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="imageViewCornerStyle" parent="">
        <item name="cornerSize">6%</item>
    </style>
    <style name="myButtonsColorStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Button.Circle</item>

    </style>
    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="Widget.Material3.Button.IconButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="mySearchBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!--<item name="android:textSize">16sp</item>-->
        <!--<item name="boxBackgroundColor">@color/search_box_background_color</item>-->
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>
        <!--  <item name="boxStrokeColor">@color/yellow</item>-->
        <item name="endIconMode">custom</item>
        <item name="hintEnabled">false</item>

    </style>
    <style name="Theme.With.Toolbar" parent = "Base.Theme.KTMusicPlayer">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">@color/color_primary</item>

       </style>
    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="buttonTint">@color/controls_colors</item>
        <item name="backgroundColor">@color/controls_colors</item>
        <item name="colorPrimary">@color/controls_colors</item>
        <item name="colorAccent">@color/controls_colors</item>
        <item name="colorControlNormal">@color/controls_colors</item>
    </style>
    <style name="albumCoverImageAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="myFullScreenDialog" parent="ShapeAppearanceOverlay.MaterialComponents.MaterialCalendar.Window.Fullscreen">
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="android:theme">@style/myToolbarDrawerStyle</item>
    </style>
    <style name="CustomToolbarTitleStyle">
        <item name="android:textAlignment">center</item>  <!-- Centra el texto -->
        <item name="android:gravity">center</item>  <!-- Asegura que el texto esté centrado -->
        <item name="android:textColor">@android:color/white</item>  <!-- Color del título -->
        <item name="android:textSize">20sp</item>  <!-- Tamaño del título -->
    </style>
   <style name="myToolbarDrawerStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
       <!-- <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>-->
      <!-- <item name="titleTextStyle">@style/CustomToolbarTitleStyle</item>-->

    </style>
    <!--<style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>-->
    <style name="splashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">?attr/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_icon_splash</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.KTMusicPlayer</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:ignore = "newApi">1500</item>
        <item name="android:windowSplashScreenBrandingImage" tools:ignore="NewApi">@drawable/ktmusic_brand_text</item>

    </style>
</resources>